{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "This is the schema for the main Scenario file for the game. It basically a skeleton, pulling in other more substantial types from other files. It could be split up, but for now its easier managing three files Scenario, Schema and Objects",
  "type": "object",
  "definitions": {
    "pieces_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "../jigsaw.json#/definitions/piece_type"
        }
      ],
      "properties": {
        "goal1": {
          "$ref": "02_enums.json#/definitions/goal_enum"
        },
        "goal2": {
          "$ref": "02_enums.json#/definitions/goal_enum"
        },
        "inv1": {
          "$ref": "02_enums.json#/definitions/inv_enum"
        },
        "inv2": {
          "$ref": "02_enums.json#/definitions/inv_enum"
        },
        "inv3": {
          "$ref": "02_enums.json#/definitions/inv_enum"
        },
        "prop1": {
          "$ref": "02_enums.json#/definitions/prop_enum"
        },
        "prop2": {
          "$ref": "02_enums.json#/definitions/prop_enum"
        },
        "prop3": {
          "$ref": "02_enums.json#/definitions/prop_enum"
        },
        "prop4": {
          "$ref": "02_enums.json#/definitions/prop_enum"
        },
        "prop5": {
          "$ref": "02_enums.json#/definitions/prop_enum"
        },
        "prop6": {
          "$ref": "02_enums.json#/definitions/prop_enum"
        },
        "merge": {
          "type": "string"
        },
        "restrictions": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "#/definitions/char_wrapper_type"
          }
        }
      }
    },
    "char_wrapper_type": {
      "type": "object",
      "required": ["char"],
      "properties": {
        "char": {
          "$ref": "02_enums.json#/definitions/char_enum"
        }
      }
    },
    "prop_wrapper_type": {
      "type": "object",
      "required": ["prop"],
      "properties": {
        "prop": {
          "$ref": "02_enums.json#/definitions/prop_enum"
        }
      }
    }
  },
  "properties": {
    "startingThings": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "char": {
            "$ref": "02_enums.json#/definitions/char_enum"
          },
          "thing": {
            "oneOf": [
              {
                "$ref": "02_enums.json#/definitions/inv_enum"
              },
              {
                "$ref": "02_enums.json#/definitions/goal_enum"
              },
              {
                "$ref": "02_enums.json#/definitions/prop_enum"
              }
            ]
          }
        }
      }
    },
    "pieces": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/pieces_type"
      }
    }
  }
}
