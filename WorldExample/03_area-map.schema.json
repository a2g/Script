{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "This is the schema for an area in the game. ",
  "type": "object",
  "definitions": {
    "square_type": {
      "type": "object",
      "properties": {
        "col": {
          "$ref": "../jigsaw.json#/definitions/col_type"
        },
        "row": {
          "$ref": "../jigsaw.json#/definitions/row_type"
        },
        "location": {
          "$ref": "03_enums.json#/definitions/location_enum"
        }
      }
    }
  },
  "additionalProperties": false,
  "minProperties": 3,
  "properties": {
    "startingLocation" :{
      "$ref": "03_enums.json#/definitions/location_enum"
    },
    "squares": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/square_type"
      }
    },
    "props": {
      "type": "object",
      "patternProperties": {
        "^prop_": {
          "$ref": "03_enums.json#/definitions/location_enum"
        }
      }
    }
  }
}