{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
   // "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,

    "declaration": true,
    "incremental": true,


    "rootDir": "./",
    "baseUrl": "./",
    "paths": { // A series of entries which re-map imports to lookup locations relative to the 'baseUrl'.
      "jigsaw/*": [
        "./src/main/*"
      ],
      "schema/*": [
        "./schema/*"
      ],
      "thirdparty/*": [
        "../node_modules/*"
      ],
      "test/*": [
        "./src/test/*"
      ],
    },
    "downlevelIteration": true, // allows for-of loops
    "resolveJsonModule" : true // allows importation of json
  },
  "include": ["**/*.ts"],
}
