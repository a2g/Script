{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "module": "esnext",
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "declaration": true, /* Required for Mocha breakpoints Generates corresponding '.d.ts' file. */
    "declarationMap": true, /* Required for Mocha breakpoints  - Generates a sourcemap for each corresponding '.d.ts' file. */
    "sourceMap": true, /* Generates corresponding '.map' file. */
    "inlineSources": true,
    "rootDir": "./",
    "incremental": true,
    "esModuleInterop": true, /* required for importation of json */
    "resolveJsonModule": true, /* required for importation of json */
    "skipLibCheck": true, /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file. */
    "types": [
      "mocha",
      "node"
    ], /* Type declaration files to be included in compilation. */
  },
  "include": [
    "**/*.ts",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
